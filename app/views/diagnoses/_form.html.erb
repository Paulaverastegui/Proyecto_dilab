<%= form_with(model: [@patient, @diagnosis], local: true) do |form| %>
  <% if @diagnosis.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@diagnosis.errors.count, "error") %> impidieron guardar el diagnóstico:</h2>
      <ul>
        <% @diagnosis.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description, "Descripción" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :severity, "Severidad" %>
    <%= form.select :severity, ['Leve', 'Moderada', 'Severa'], prompt: 'Seleccione severidad' %>
  </div>

  <div class="field">
    <%= form.label :date, "Fecha" %>
    <%= form.date_select :date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

