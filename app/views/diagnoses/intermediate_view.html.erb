<!-- intermediate_view.html.erb -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Opciones</title>
  <style>
    body {
      background-color: #FFFFFF;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      height: 100vh;
      margin: 0;
      font-family: 'Arial', sans-serif;
    }
    .container {
      text-align: center;
      width: 100%;
    }
    .header {
      background-color: #256490;
      color: white;
      padding: 1.5em;
      font-size: 2.5em;
      margin-bottom: 5px;
      border-bottom-left-radius: 80px;
      border-bottom-right-radius: 80px;
      width: 100%;
      text-align: center;
      left: 0;
      position: fixed;
    }
    .content {
      margin-top: 200px; 
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .button {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 300px;
      height: 80px;
      border: none;
      cursor: pointer;
      font-size: 1.2em;
      margin: 10px 0;
      text-decoration: none;
      border-radius: 30px;
      color: white;
    }
    .button-registrar {
      background-color: #A8BDBC;
    }
    .button-guardar {
      background-color: #7D9DB7;
    }
  </style>
</head>
<body>
  <%= render 'shared/header' %>
  <div class="container">
    <div class="header">Opciones</div>
    <div class="content">
      <%= link_to "Registrar un nivel de disfagia", new_patient_diagnosis_level_path(@patient, @diagnosis), class: "button button-registrar" %>
      <%= link_to "Prueba de consistencias", new_patient_diagnosis_guss_scale_path(@patient, @diagnosis), class: "button button-guardar" %>
    </div>
  </div>
</body>
</html>
